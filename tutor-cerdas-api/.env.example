# ==============================================
# TutorAI Backend API - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# Database Connection
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:mypassword@localhost:5432/tutorai
DATABASE_URL=postgresql://user:password@localhost:5432/tutorai

# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
# Used for AI chat generation (gemini-1.5-flash model)
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret Key
# Generate a secure random string (minimum 32 characters)
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Ô∏è CHANGE THIS IN PRODUCTION! Use a strong random key
JWT_SECRET=your_random_secret_key_here_change_in_production

# Server Configuration
PORT=3000
NODE_ENV=development

# Indexer Service URL
# URL where the Python indexer service is running
INDEXER_URL=http://localhost:8000

# File Upload Settings
# Directory for storing uploaded PDF documents
UPLOAD_DIR=./uploads/documents

# Maximum file size in bytes (default: 10MB = 10485760 bytes)
MAX_FILE_SIZE=10485760

